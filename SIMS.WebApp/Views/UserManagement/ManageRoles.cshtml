@* File: Views/UserManagement/ManageRoles.cshtml *@
@model SIMS.WebApp.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles for: @Model.UserName</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="card">
                <div class="card-header">
                    <h2>Assign a single role</h2>
                </div>
                <div class="card-body">
                    @* Loop to create radio buttons *@
                    @foreach (var roleName in Model.Roles)
                    {
                        <div class="form-check m-1">
                            @* - type="radio" ensures only one can be selected.
                                - name="@nameof(Model.SelectedRole)" groups the radio buttons together.
                                - value="@roleName" is the value that will be sent when the form is submitted.
                                - @(Model.SelectedRole == roleName ? "checked" : "") automatically selects the user's current role.
                            *@
                            <input type="radio"
                                   name="@nameof(Model.SelectedRole)"
                                   value="@roleName"
                                   class="form-check-input"
                                   @(Model.SelectedRole == roleName ? "checked" : "") />
                            <label class="form-check-label">
                                @roleName
                            </label>
                        </div>
                    }
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>