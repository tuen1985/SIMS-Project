@model IEnumerable<SIMS.WebApp.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Pending Approvals";
}

<h1>@ViewData["Title"]</h1>
<p>List of Faculty and Department Staff accounts awaiting activation.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role(s)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <form asp-action="ApproveUser" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="btn btn-primary btn-sm">Approve</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">There are no accounts pending approval.</td>
            </tr>
        }
    </tbody>
</table>