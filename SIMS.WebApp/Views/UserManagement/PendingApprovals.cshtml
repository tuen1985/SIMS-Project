@model IEnumerable<SIMS.WebApp.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Tài khoản chờ duyệt";
}

<h1>@ViewData["Title"]</h1>
<p>Danh sách các tài khoản Giảng viên và Nhân viên Phòng Đào tạo đang chờ được kích hoạt.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <form asp-action="ApproveUser" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Không có tài khoản nào đang chờ duyệt.</td>
            </tr>
        }
    </tbody>
</table>
