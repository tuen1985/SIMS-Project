@model IEnumerable<SIMS.WebApp.ViewModels.UnifiedUserViewModel>

@{
    ViewData["Title"] = "User Management";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<h1>User Management</h1>

@if (TempData["CannotBlockMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["CannotBlockMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="input-group">
                <select name="roleFilter" class="form-control">
                    <option value="">All Roles</option>
                    <option value="Student" selected="@(currentFilter == "Student")">Student</option>
                    <option value="Faculty" selected="@(currentFilter == "Faculty")">Faculty</option>
                    <option value="Department Staff" selected="@(currentFilter == "Department Staff")">Department Staff</option>
                    <option value="Blocked Accounts" selected="@(currentFilter == "Blocked Accounts")">Blocked Accounts</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Account Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="@(user.IsBlocked ? "text-muted bg-light" : "")">
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>@user.Email</td>
                <td>
                    <span class="badge badge-pill
                                   @(user.Role == "Admin" ? "badge-danger" :
                                                           user.Role == "Faculty" ? "badge-success" :
                                                           user.Role == "Department Staff" ? "badge-info" : "badge-secondary")">
                    @user.Role
                </span>
            </td>
            <td>
                @if (user.IsBlocked)
                    {
                        <span class="text-danger font-weight-bold">Blocked</span>
                    }
                    else if (user.HasAccount)
                    {
                        <span class="text-success font-weight-bold">Active</span>
                    }
                    else
                    {
                        <span class="text-muted">Profile Only</span>
                    }
                </td>
                <td>
                    @if (user.HasAccount && user.Role != "Admin")
                    {
                        @* ĐÃ XÓA "Manage Roles" KHỎI ĐÂY *@
                        @if (user.IsBlocked)
                        {
                            <form asp-action="UnblockUser" method="post" class="d-inline delete-form-trigger"
                                  data-message="Are you sure you want to UNBLOCK the account '@user.Email'?">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <button type="submit" class="button-as-link text-success">Unblock</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="BlockUser" method="post" class="d-inline delete-form-trigger"
                                  data-message="Are you sure you want to BLOCK the account '@user.Email'? The user will not be able to log in.">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <button type="submit" class="button-as-link text-danger">Block</button>
                            </form>
                        }
                    }
                    else if (!user.HasAccount)
                    {
                        <span class="text-muted">No actions available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>