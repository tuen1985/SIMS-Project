@* File: Views/UserManagement/Index.cshtml *@
@model IEnumerable<SIMS.WebApp.ViewModels.UnifiedUserViewModel>

@{
    ViewData["Title"] = "User Management";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<h1>Quản lý người dùng</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="input-group">
                <select name="roleFilter" class="form-control">
                    <option value="">All Roles</option>
                    <option value="Student" selected="@(currentFilter == "Student")">Student</option>
                    <option value="Faculty" selected="@(currentFilter == "Faculty")">Faculty</option>
                    <option value="Department Staff" selected="@(currentFilter == "Department Staff")">Department Staff</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </div>
    </div>
</form>


<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Trạng thái tài khoản</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>@user.Email</td>
                <td>
                    <span class="badge badge-pill
                            @(user.Role == "Admin" ? "badge-danger" :
                                                  user.Role == "Faculty" ? "badge-success" :
                                                  user.Role == "Department Staff" ? "badge-info" : "badge-secondary")">
                    @user.Role
                </span>
            </td>
            <td>
                @if (user.AccountStatus == "Đã có tài khoản")
                    {
                        <span class="text-success font-weight-bold">@user.AccountStatus</span>
                    }
                    else
                    {
                        <span class="text-muted">@user.AccountStatus</span>
                    }
                </td>
                <td>
                    @if (user.AccountStatus == "Đã có tài khoản" && user.Role != "Admin")
                    {
                        <a asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">
                            Quản lý Vai trò
                        </a>
                    }
                    else if (user.AccountStatus != "Đã có tài khoản")
                    {
                        <button class="btn btn-secondary btn-sm" disabled>Tạo tài khoản</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>