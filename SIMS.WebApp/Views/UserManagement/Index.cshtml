@model IEnumerable<SIMS.WebApp.ViewModels.UnifiedUserViewModel>

@{
    ViewData["Title"] = "User Management";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<h1>User Management</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="input-group">
                <select name="roleFilter" class="form-control">
                    <option value="">All Roles</option>
                    <option value="Student" selected="@(currentFilter == "Student")">Student</option>
                    <option value="Faculty" selected="@(currentFilter == "Faculty")">Faculty</option>
                    <option value="Department Staff" selected="@(currentFilter == "Department Staff")">Department Staff</option>
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Account Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>@user.Email</td>
                <td>
                    <span class="badge badge-pill
                                      @(user.Role == "Admin" ? "badge-danger" :
                                                              user.Role == "Faculty" ? "badge-success" :
                                                              user.Role == "Department Staff" ? "badge-info" : "badge-secondary")">
                    @user.Role
                </span>
            </td>
            <td>
                @if (user.AccountStatus == "Account Exists")
                    {
                        <span class="text-success font-weight-bold">@user.AccountStatus</span>
                    }
                    else
                    {
                        <span class="text-muted">@user.AccountStatus</span>
                    }
                </td>
                <td>
                    @if (user.AccountStatus == "Account Exists" && user.Role != "Admin")
                    {
                        <a asp-action="ManageRoles" asp-route-userId="@user.UserId" class="action-link">Manage Roles</a>

                        <span class="mx-2">|</span>

                        <form asp-action="DeleteUser" method="post" class="d-inline delete-form-trigger"
                              data-message="Are you sure you want to PERMANENTLY DELETE the account '@user.Email'? This action cannot be undone.">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="button-as-link">Delete</button>
                        </form>
                    }
                    else if (user.AccountStatus != "Account Exists")
                    {
                        <span class="text-muted">No actions available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>