@using SIMS.Domain
@model SIMS.Domain.Classroom

@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <h4>Thông tin chung</h4>
        <dl class="row">
            <dt class="col-sm-3">Tên Lớp học</dt>
            <dd class="col-sm-9">@Model.ClassName</dd>

            <dt class="col-sm-3">Học kỳ</dt>
            <dd class="col-sm-9">@Model.Semester</dd>

            <dt class="col-sm-3">Khóa học</dt>
            <dd class="col-sm-9">@Model.Course.CourseName</dd>

            <dt class="col-sm-3">Giảng viên</dt>
            <dd class="col-sm-9">@Model.Faculty.FullName</dd>
        </dl>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8">
        <h4>Danh sách Sinh viên</h4>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thêm sinh viên vào lớp</h6>
            </div>
            <div class="card-body">
                <form asp-action="AddStudentToClass" method="post">
                    <input type="hidden" name="classroomId" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-8">
                            <select name="studentId" class="form-control" asp-items="ViewBag.AvailableStudents">
                                <option value="">-- Chọn sinh viên để thêm --</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success btn-block">Thêm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Enrollments.Any())
                {
                    @foreach (var enrollment in Model.Enrollments)
                    {
                        <tr>
                            <td>@enrollment.Student.StudentCode</td>
                            <td>@enrollment.Student.FullName</td>
                            <td>@enrollment.Student.Email</td>
                            <td>
                                @if (enrollment.Status == EnrollmentStatus.Approved)
                                {
                                    <span class="badge badge-success">Đã duyệt</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Chờ duyệt</span>
                                }
                            </td>
                            <td>
                                <form asp-action="RemoveStudentFromClass" method="post" class="delete-form-trigger"
                                      data-message="Bạn có chắc chắn muốn xóa sinh viên @enrollment.Student.FullName khỏi lớp học này không?">
                                    <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                                    <input type="hidden" name="classroomId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Chưa có sinh viên nào trong lớp.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>