@model IEnumerable<SIMS.Domain.Classroom>

@{
    ViewData["Title"] = "Classroom List";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Classroom</a>
</p>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Class Name</th>
            <th>Semester</th>
            <th>Course Name</th>
            <th>Faculty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Faculty.FullName)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <form asp-action="Delete" method="post" class="d-inline delete-form-trigger"
                          data-message="Are you sure you want to delete this entire class? All student enrollment data for this class will also be deleted.">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="button-as-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>