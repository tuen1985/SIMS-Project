<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="bg-light login-page-body">
    @* Thêm class mới ở đây *@
    <div class="container-fluid">
        <div class="row vh-100">
            <!-- Cột bên trái chứa form -->
            <div class="col-lg-6 d-flex justify-content-center align-items-center">
                <div class="login-form-container">
                    <div class="text-center mb-4">
                        <img src="~/img/Logo-Btec.webp" alt="BTEC Logo" style="max-height: 60px;">
                    </div>
                    @RenderBody()
                </div>
            </div>
            <!-- Cột bên phải chứa hình ảnh -->
            <div class="col-lg-6 d-none d-lg-block login-image-container">
                <div class="image-overlay">
                    <h2 class="text-white font-weight-bold"></h2>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
