@{
    // Get current Controller and Action from URL
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - SIMS</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" />

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body id="page-top" class="@(currentController == "Home" && currentAction == "Index" ? "homepage-bg" : "")">
    <div id="wrapper">
        <ul class="navbar-nav bg-light sidebar sidebar-light accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon">
                    <img src="~/img/Logo-Btec.webp" alt="BTEC Logo" style="max-height: 45px;">
                </div>
            </a>

            <li><hr class="sidebar-divider my-0"></li>

            <li class="nav-item @(currentController == "Home" ? "active" : "")">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li><hr class="sidebar-divider"></li>

            <li class="nav-item">
                <div class="sidebar-heading">
                    Features
                </div>
            </li>

            @* MENU FOR ADMIN *@
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item @(currentController == "UserManagement" && currentAction == "Index" ? "active" : "")">
                    <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                        <i class="fas fa-fw fa-users-cog"></i>
                        <span>User Management</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "UserManagement" && currentAction == "Create" ? "active" : "")">
                    <a class="nav-link" asp-controller="UserManagement" asp-action="Create">
                        <i class="fas fa-fw fa-user-plus"></i>
                        <span>Add User</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "Students" ? "active" : "")">
                    <a class="nav-link" asp-controller="Students" asp-action="Index">
                        <i class="fas fa-fw fa-user-graduate"></i>
                        <span>Student Management</span>
                    </a>
                </li>
            }

            @* MENU FOR ADMIN & DEPARTMENT STAFF *@
            @if (User.IsInRole("Department Staff"))
            {
                <li class="nav-item @(currentController == "Classroom" ? "active" : "")">
                    <a class="nav-link" asp-controller="Classroom" asp-action="Index">
                        <i class="fas fa-fw fa-school"></i>
                        <span>Classroom Management</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "Courses" ? "active" : "")">
                    <a class="nav-link" asp-controller="Courses" asp-action="Index">
                        <i class="fas fa-fw fa-book"></i>
                        <span>Course Management</span>
                    </a>
                </li>
            }

            @* MENU FOR FACULTY *@
            @if (User.IsInRole("Faculty"))
            {
                <li class="nav-item @(currentController == "Faculty" ? "active" : "")">
                    <a class="nav-link" asp-controller="Faculty" asp-action="Index">
                        <i class="fas fa-fw fa-chalkboard-teacher"></i>
                        <span>My Classes</span>
                    </a>
                </li>
            }

            @* MENU FOR STUDENT *@
            @if (User.IsInRole("Student"))
            {
                <li class="nav-item @(currentController == "StudentDashboard" && currentAction == "AcademicResults" ? "active" : "")">
                    <a class="nav-link" asp-controller="StudentDashboard" asp-action="AcademicResults">
                        <i class="fas fa-fw fa-poll"></i>
                        <span>Academic Results</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "StudentDashboard" && currentAction == "LearningPath" ? "active" : "")">
                    <a class="nav-link" asp-controller="StudentDashboard" asp-action="LearningPath">
                        <i class="fas fa-fw fa-route"></i>
                        <span>Learning Path</span>
                    </a>
                </li>
            }

            <li><hr class="sidebar-divider d-none d-md-block"></li>

            <li class="nav-item">
                <div class="text-center d-none d-md-block">
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>
            </li>
        </ul>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-light topbar shadow fixed-top">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="d-flex align-items-center" style="text-decoration: none;" asp-controller="Home" asp-action="Index">
                        <span class="h5 mb-0 font-weight-bold text-gray-800">SIMS</span>
                    </a>

                    <ul class="navbar-nav ml-auto">
                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            @if (currentController == "Home" && currentAction == "Index")
            {
                <footer class="sticky-footer custom-footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 footer-contact-info">
                                <h6>For any feedback or questions, please contact: FPT Polytechnic International College in Hanoi</h6>
                                <ul class="list-unstyled">
                                    <li>
                                        <i class="fas fa-map-marker-alt"></i>
                                        <strong>Address:</strong> BTEC Tòa T-FPPT, Trinh Van Bo Street, Nam Tu Liem District, Hanoi.
                                    </li>
                                    <li>
                                        <i class="fas fa-envelope"></i>
                                        <strong>Email:</strong>
                                        <ul>
                                            <li>Academic Dept: <a href="mailto:academic.btec.hn@fpt.edu.vn">academic.btec.hn@fpt.edu.vn</a></li>
                                            <li>Student Services Dept: <a href="mailto:sro.btec.hn@fpt.edu.vn">sro.btec.hn@fpt.edu.vn</a></li>
                                            <li>Student Affairs Dept: <a href="mailto:se.btec.hn@fpt.edu.vn">se.btec.hn@fpt.edu.vn</a></li>
                                            <li>Finance Dept: <a href="mailto:accounting.btec.hn@fpt.edu.vn">accounting.btec.hn@fpt.edu.vn</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <i class="fas fa-phone-alt"></i>
                                        <strong>Hotline:</strong> 024 730 99 588
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6 footer-contact-info">
                                <h6>For more information or any queries, please contact: FPT Polytechnic International in Hanoi</h6>
                                <ul class="list-unstyled">
                                    <li>
                                        <i class="fas fa-map-marker-alt"></i>
                                        <strong>Address:</strong> BTEC, BTEC FPT Building, Trinh Van Bo Street, Nam Tu Liem District, Hanoi.
                                    </li>
                                    <li>
                                        <i class="fas fa-envelope"></i>
                                        <strong>Email:</strong>
                                        <ul>
                                            <li>Academic Department: <a href="mailto:academic.btec.hn@fpt.edu.vn">academic.btec.hn@fpt.edu.vn</a></li>
                                            <li>SRO Department: <a href="mailto:sro.btec.hn@fpt.edu.vn">sro.btec.hn@fpt.edu.vn</a></li>
                                            <li>SE Department: <a href="mailto:se.btec.hn@fpt.edu.vn">se.btec.hn@fpt.edu.vn</a></li>
                                            <li>Finance Department: <a href="mailto:accounting.btec.hn@fpt.edu.vn">accounting.btec.hn@fpt.edu.vn</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <i class="fas fa-phone-alt"></i>
                                        <strong>Hotline:</strong> 024 730 99 588
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
            }
            else
            {
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; SIMS Project @DateTime.Now.Year</span>
                        </div>
                    </div>
                </footer>
            }
        </div>
    </div>
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Action</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="deleteModalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    @* THAY ĐỔI ID VÀ TEXT CỦA NÚT BẤM *@
                    <button type="button" class="btn btn-danger" id="confirmActionButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8/jquery.inputmask.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>