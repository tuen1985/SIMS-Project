@{
    // Lấy tên Controller và Action hiện tại từ URL
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - SIMS</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" />

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-light sidebar sidebar-light accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon">
                    <img src="~/img/Logo-Btec.webp" alt="BTEC Logo" style="max-height: 45px;">
                </div>
                <div class="sidebar-brand-text mx-3"></div>
            </a>

            <li><hr class="sidebar-divider my-0"></li>

            <li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Trang chủ</span>
                </a>
            </li>

            <li><hr class="sidebar-divider"></li>

            <li class="nav-item">
                <div class="sidebar-heading">
                    Chức năng
                </div>
            </li>

            @* MENU DÀNH CHO ADMIN *@
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                        <i class="fas fa-fw fa-users-cog"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="UserManagement" asp-action="PendingApprovals">
                        <i class="fas fa-fw fa-user-check"></i>
                        <span>Duyệt tài khoản</span>
                    </a>
                </li>
            }

            @* MENU DÀNH CHO NV PHÒNG ĐÀO TẠO *@
            @if (User.IsInRole("Department Staff"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Classroom" asp-action="Index">
                        <i class="fas fa-fw fa-school"></i>
                        <span>Quản lý Lớp học</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Courses" asp-action="Index">
                        <i class="fas fa-fw fa-book"></i>
                        <span>Quản lý Khóa học</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Students" asp-action="Index">
                        <i class="fas fa-fw fa-user-graduate"></i>
                        <span>Quản lý Sinh viên</span>
                    </a>
                </li>
            }

            @* MENU DÀNH CHO GIẢNG VIÊN *@
            @if (User.IsInRole("Faculty"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-fw fa-chalkboard-teacher"></i>
                        <span>Lớp học của tôi</span>
                    </a>
                </li>
            }

            @* MENU DÀNH CHO SINH VIÊN *@
            @if (User.IsInRole("Student"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-fw fa-poll"></i>
                        <span>Kết quả học tập</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-fw fa-edit"></i>
                        <span>Đăng ký môn học</span>
                    </a>
                </li>
            }

            <li><hr class="sidebar-divider d-none d-md-block"></li>

            <li class="nav-item">
                <div class="text-center d-none d-md-block">
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>
            </li>

        </ul>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar shadow fixed-top">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="d-flex align-items-center" style="text-decoration: none;" asp-controller="Home" asp-action="Index">
                        <span class="h5 mb-0 font-weight-bold text-gray-800">SIMS</span>
                    </a>

                    <ul class="navbar-nav ml-auto">
                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer custom-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 footer-contact-info">
                            <h6>Mọi góp ý, thắc mắc xin liên hệ: Trung tâm Cao đẳng quốc tế tại Hà Nội - Trường Cao đẳng FPT Polytechnic</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fas fa-map-marker-alt"></i>
                                    <strong>Địa chỉ:</strong> BTEC Tòa T-FPPT, đường Trịnh Văn Bô, quận Nam Từ Liêm, Hà Nội.
                                </li>
                                <li>
                                    <i class="fas fa-envelope"></i>
                                    <strong>Email:</strong>
                                    <ul>
                                        <li>Phòng TC & QLĐT: <a href="mailto:academic.btec.hn@fpt.edu.vn">academic.btec.hn@fpt.edu.vn</a></li>
                                        <li>DVSV: <a href="mailto:sro.btec.hn@fpt.edu.vn">sro.btec.hn@fpt.edu.vn</a></li>
                                        <li>CTSV: <a href="mailto:se.btec.hn@fpt.edu.vn">se.btec.hn@fpt.edu.vn</a></li>
                                        <li>Bộ phận thu ngân: <a href="mailto:accounting.btec.hn@fpt.edu.vn">accounting.btec.hn@fpt.edu.vn</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <i class="fas fa-phone-alt"></i>
                                    <strong>Hotline:</strong> 024 730 99 588
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6 footer-contact-info">
                            <h6>For more information or any queries, please contact: FPT Polytechnic International in Hanoi</h6>
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fas fa-map-marker-alt"></i>
                                    <strong>Address:</strong> BTEC, BTEC FPT Building, Trinh Van Bo Street, Nam Tu Liem District, Hanoi.
                                </li>
                                <li>
                                    <i class="fas fa-envelope"></i>
                                    <strong>Email:</strong>
                                    <ul>
                                        <li>Academic Department: <a href="mailto:academic.btec.hn@fpt.edu.vn">academic.btec.hn@fpt.edu.vn</a></li>
                                        <li>SRO Department: <a href="mailto:sro.btec.hn@fpt.edu.vn">sro.btec.hn@fpt.edu.vn</a></li>
                                        <li>SE Department: <a href="mailto:se.btec.hn@fpt.edu.vn">se.btec.hn@fpt.edu.vn</a></li>
                                        <li>Finance Department: <a href="mailto:accounting.btec.hn@fpt.edu.vn">accounting.btec.hn@fpt.edu.vn</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <i class="fas fa-phone-alt"></i>
                                    <strong>Hotline:</strong> 024 730 99 588
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận Hành động</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="deleteModalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Xóa</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8/jquery.inputmask.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
