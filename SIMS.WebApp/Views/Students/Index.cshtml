@model IEnumerable<SIMS.Domain.Student>

<h1>Student List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</p>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().StudentCode)
            </th>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th></th> <!-- Column for action buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => student.StudentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                    <form asp-action="Delete" method="post" class="d-inline delete-form-trigger"
                          data-message="Are you sure you want to delete the student '@student.FullName'?">
                        <input type="hidden" name="id" value="@student.Id" />
                        <button type="submit" class="button-as-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>