@model IEnumerable<SIMS.Domain.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

@if (TempData["CannotDeleteMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["CannotDeleteMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</p>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().StudentCode)
            </th>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => student.StudentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.Email)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                
                        <text> |</text>
                    }
                    <a asp-action="Details" asp-route-id="@student.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>