@model List<SIMS.WebApp.ViewModels.GradeUpdateViewModel>
@{
    ViewData["Title"] = "Manage Grades";
}

<h1>Manage Grades for Class: @ViewBag.ClassName</h1>
<hr />

<form asp-action="ManageGrades" method="post">
    <input type="hidden" name="classroomId" value="@ViewBag.ClassroomId" />
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Student Code</th>
                <th>Full Name</th>
                <th style="width: 150px;">Score</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].StudentCode
                        <input type="hidden" asp-for="@Model[i].EnrollmentId" />
                    </td>
                    <td>@Model[i].StudentName</td>
                    <td>
                        <input asp-for="@Model[i].Score" class="form-control" type="number" min="0" max="100" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group mt-3">
        <input type="submit" value="Save Grades" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Go Back</a>
    </div>
</form>