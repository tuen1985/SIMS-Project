@model IEnumerable<SIMS.Domain.Enrollment>
@{
    ViewData["Title"] = "Academic Results";

    // Helper function to convert numerical score to letter grade
    string GetLetterGrade(float? score)
    {
        if (!score.HasValue) return "N/A"; // Not Available
        if (score < 65) return "F";
        if (score >= 65 && score <= 79) return "P";
        if (score >= 80 && score <= 89) return "M";
        if (score >= 90 && score <= 100) return "D";
        return "N/A";
    }

    // Helper function to determine status
    string GetStatus(float? score)
    {
        if (!score.HasValue) return "In Progress";
        if (score < 65) return "Failed";
        return "Passed";
    }
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Semester</th>
                        <th>Grade (Number)</th>
                        <th>Grade (Letter)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var letterGrade = GetLetterGrade(item.Grade?.Score);
                        var status = GetStatus(item.Grade?.Score);

                        <tr>
                            <td>@item.Classroom.Course.CourseCode</td>
                            <td>@item.Classroom.Course.CourseName</td>
                            <td>@item.Classroom.Semester</td>
                            <td>@(item.Grade?.Score.HasValue == true ? item.Grade.Score.Value.ToString("0.0") : "Not available")</td>
                            <td>
                                @if (letterGrade != "N/A")
                                {
                                    <span class="font-weight-bold">@letterGrade</span>
                                }
                            </td>
                            <td>
                                @if (status == "Passed")
                                {
                                    <span class="badge badge-success">@status</span>
                                }
                                else if (status == "Failed")
                                {
                                    <span class="badge badge-danger">@status</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">@status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>