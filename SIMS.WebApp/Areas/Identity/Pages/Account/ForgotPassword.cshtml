@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
    <p class="mb-4">Nhập địa chỉ email của bạn dưới đây và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu.</p>
</div>

<form id="forgotPasswordForm" method="post">
    <div id="validationSummary" class="text-danger" role="alert"></div>
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="Nhập địa chỉ email..." />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-login btn-user btn-block">Đặt lại mật khẩu</button>
</form>
<hr>
<div class="text-center login-links">
    <a class="small" asp-page="./Register">Tạo tài khoản mới!</a>
</div>
<div class="text-center login-links">
    <a class="small" asp-page="./Login">Đã có tài khoản? Đăng nhập!</a>
</div>

<div class="modal fade" id="forgotPasswordSuccessModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yêu cầu đã được gửi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Vui lòng kiểm tra email của bạn để tiếp tục quá trình đặt lại mật khẩu.
                <hr />
                <a id="resetLink" href="#" class="btn btn-login" style="display:none;">Tới trang Reset Mật khẩu</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#forgotPasswordForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                if (form.valid()) {
                    $.ajax({
                        type: 'POST',
                        url: form.attr('action'),
                        data: form.serialize(),
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success && response.resetCode) {
                                // 1. Tạo đường link reset đầy đủ
                                var resetUrl = '/Identity/Account/ResetPassword?code=' + response.resetCode;

                                // 2. Tìm đến thẻ <a>, gán đường link vào thuộc tính href và cho nó hiện ra
                                $('#resetLink').attr('href', resetUrl).show();

                                // 3. Hiển thị modal
                                $('#forgotPasswordSuccessModal').modal('show');
                            } else {
                                // Xử lý lỗi nếu cần
                                alert('Không thể lấy mã reset. Vui lòng kiểm tra lại email.');
                            }
                        },
                        error: function () {
                            alert('Đã có lỗi không mong muốn xảy ra. Vui lòng thử lại.');
                        }
                    });
                }
            });

            // Reset lại link khi modal bị đóng để chuẩn bị cho lần sau
            $('#forgotPasswordSuccessModal').on('hidden.bs.modal', function () {
                $('#resetLink').attr('href', '#').hide();
            });
        });
    </script>
}