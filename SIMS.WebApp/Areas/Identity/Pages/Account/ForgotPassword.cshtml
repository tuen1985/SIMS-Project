@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
    <p class="mb-4">Enter your email address below and we will send you a link to reset your password.</p>
</div>

<form id="forgotPasswordForm" method="post">
    <div id="validationSummary" class="text-danger" role="alert"></div>
    <div class="form-group">
        <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="Enter Email Address..." />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-login btn-user btn-block">Reset Password</button>
</form>
<hr>
<div class="text-center login-links">
    <a class="small" asp-page="./Login">Already have an account? Login!</a>
</div>

<div class="modal fade" id="forgotPasswordSuccessModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request Sent</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Please check your email to reset your password.
                <hr />
                <a id="resetLink" href="#" class="btn btn-login" style="display:none;">Go to Reset Password Page</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#forgotPasswordForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                if (form.valid()) {
                    $.ajax({
                        type: 'POST',
                        url: form.attr('action'),
                        data: form.serialize(),
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success && response.resetCode) {
                                // 1. Create the full reset link
                                var resetUrl = '/Identity/Account/ResetPassword?code=' + response.resetCode;

                                // 2. Find the <a> tag, assign the link to its href attribute, and show it
                                $('#resetLink').attr('href', resetUrl).show();

                                // 3. Show the modal
                                $('#forgotPasswordSuccessModal').modal('show');
                            } else {
                                // Handle errors if needed
                                alert('Could not get reset code. Please check your email.');
                            }
                        },
                        error: function () {
                            alert('An unexpected error occurred. Please try again.');
                        }
                    });
                }
            });

            // Reset the link when the modal is closed to prepare for the next time
            $('#forgotPasswordSuccessModal').on('hidden.bs.modal', function () {
                $('#resetLink').attr('href', '#').hide();
            });
        });
    </script>
}